FROM node:alpine
LABEL maintainer="jose.duran@duransoftware.es"
LABEL description="Mongo CRUD general api"
LABEL version="1.0.0"

RUN mkdir /app
RUN mkdir /app/swagger

WORKDIR .

ADD DsExample.js ./app/ 
ADD swagger/ ./app/swagger/


WORKDIR ./app

RUN ls -la /app/*

RUN apk add --no-cache --virtual .gyp \
        python \
        make \
        g++ \
    && npm install --production \
    && apk del .gyp



EXPOSE 51234
CMD ["node", "DsExample"]
